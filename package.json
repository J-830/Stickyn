{
  "name": "stickyn",
  "version": "1.0.0",
  "description": "Simple sticky note app with Notion sync",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch src --exec electron .",
    "build": "electron-builder --win portable",
    "clean": "rimraf dist node_modules package-lock.json",
    "rebuild": "npm run clean && npm install"
  },
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "electron": "^28.0.0",
    "simple-node-logger": "^21.8.12"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.stickyn.app",
    "productName": "Stickyn",
    "win": {
      "target": "portable",
      "icon": "src/assets/icon.ico"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}