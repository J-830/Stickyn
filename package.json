{
  "name": "stickyn",
  "version": "1.0.0",
  "description": "Simple portable sticky note app for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14"
  },
  "build": {
    "appId": "com.stickyn.app",
    "productName": "StickyN",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    }
  }
}